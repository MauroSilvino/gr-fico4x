generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  name       String   @db.VarChar(255)
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model CandleChart {
  id         String   @id @default(uuid())
  value      Json
  created_at DateTime @default(now())

  @@index([value(ops: JsonbPathOps)], type: Gin)
}
